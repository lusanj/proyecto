      <link rel="stylesheet" href="/css/style.css">    
    </head>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <form action="/users/register" method="post">
        <div class="form-group">
            <% if (typeof errors !== 'undefined') { errors.map(function(error) { %>
                
                <p><%error.msg %></p>
                <% })
                
            }%>
            <label for="">Registrese con su email</label>
            <input type="text" name="email" class="form-control" 
                   value="<%= typeof data != 'undefined' ? data.email: '' %>">
        </div>
        <div class="form-group">
            <label for="">Ingrese una clave</label>
            <input type="password" name="password" class="form-control" 
            value="<%= typeof data != 'undefined' ? data.password: '' %>">
        </div>
        
        // dejar que suba una foto de avatar
        
        <div class="form-group">
            <button class="btn-btn-primary" >Enviar</button>
        </div>
    </form>
    
</body>
</html>